    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "mmdetection/mmdet/*/**": false
    },
    "python.formatting.provider": "black",
    "terminal.integrated.scrollback": 100000
}